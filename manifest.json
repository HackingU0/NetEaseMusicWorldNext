{
	"manifest_version": 2,
	"name": "__MSG_name__",
	"version": "1.0.0",
	"description": "__MSG_description__",
	"default_locale": "en",
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://music.163.com/*",
		"*://*.music.126.net/*"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["*://music.163.com/*"],
			"js": ["content-script.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": ["page-script.js"],
	"browser_action": {
		"default_icon": {
			"16": "images/red16.png",
			"48": "images/red48.png",
			"128": "images/red128.png"
		}
	},
	"icons": {
		"16": "images/red16.png",
		"48": "images/red48.png",
		"128": "images/red128.png"
	},
	"applications": {
		"gecko": {
			"id": "neteasemusicworld@hacku.com",
			"strict_min_version": "57.0"
		}
	}
}
